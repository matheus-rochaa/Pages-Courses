{% extends "layout.njk" %}

{% block head %}
        <title>Cursos - Rocketseat</title>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
{% endblock %}

{% block content %}       
<section class="cards">
    {% for item in items %}
    <div class="card" id="{{ item.id }}">
        <div class="card__img">
            <img src="{{ item.img }}" alt="Starter">
        </div>
        
        <div class="card__content">
            <h3>{{ item.title }}</h3>
        </div>

        <div class="card__info">
            <p class="card__price">{{ item.price }}</p>
        </div>
    </div>        
    {% endfor %}
</section>

<script src="/scripts.js"></script>

{% endblock %}